{
  "name": "pmb-service",
  "version": "1.0.0",
  "description": "Student Management System API - Built with Bun, Express, and Prisma",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.js",
    "start": "bun src/server.js",
    "setup:local": "chmod +x scripts/setup-local.sh && ./scripts/setup-local.sh",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:push": "npx prisma db push",
    "db:push:prod": "npx prisma db push --force-reset",
    "db:seed": "bun prisma/seed.js",
    "db:studio": "npx prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "express": "^4.21.2",
    "uuid": "^11.0.3",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "prisma": "^6.1.0"
  }
}
