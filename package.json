{
  "name": "pmb-service",
  "version": "1.0.0",
  "description": "Student Management System API - Built with Bun, Express, and Prisma",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.js",
    "start": "bun src/server.js",
    "db:generate": "bunx prisma generate",
    "db:migrate": "bunx prisma migrate dev",
    "db:push": "bunx prisma db push",
    "db:studio": "bunx prisma studio",
    "db:seed": "bun prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "express": "^4.21.2",
    "uuid": "^11.0.3",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "prisma": "^6.1.0"
  }
}
